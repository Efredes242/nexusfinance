{
  "name": "nexus-finances",
  "private": true,
  "version": "1.0.0",
  "description": "Aplicaci√≥n Profesional de Finanzas Personales",
  "author": "Nexus Finances Team",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "node server/index.js",
    "start": "concurrently \"npm run dev\" \"npm run server\"",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:3000 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:pack": "vite build && electron-packager . \"Nexus Finances\" --platform=win32 --arch=x64 --icon=build/icon.ico --out=dist-stage-v2 --overwrite --ignore=\"^/(src|public|dist-.*|scripts|build|server/finanzas\\.db|Nexus-app|nexus-pagina.*|Nexus.*DEMO|BACKUPS-FUNCIONALES|Instaladores)\" && node scripts/cleanup-build.cjs",
    "build:installer": "node scripts/build-manual-installer.cjs"
  },
  "dependencies": {
    "@google/genai": "^1.38.0",
    "@react-oauth/google": "^0.13.4",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.21.1",
    "google-auth-library": "^10.5.0",
    "googleapis": "^170.1.0",
    "jimp": "^1.6.0",
    "jsonwebtoken": "^9.0.3",
    "jwt-decode": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "buffer": "^6.0.3",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.0",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-packager": "^17.1.2",
    "electron-winstaller": "^5.4.0",
    "events": "^3.3.0",
    "lucide-react": "^0.460.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.47",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.0",
    "stream-browserify": "^3.0.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.14",
    "vite": "^5.4.10",
    "vite-plugin-node-polyfills": "^0.25.0",
    "wait-on": "^9.0.3",
    "xlsx-js-style": "^1.2.0"
  },
  "build": {
    "appId": "com.nexusfinances.app",
    "productName": "Nexus Finances",
    "directories": {
      "output": "dist-installer-clean"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "package.json",
      "node_modules/**/*",
      ".env",
      "!server/finanzas.db",
      "!**/*.map"
    ],
    "asarUnpack": [
      "server/**/*",
      "dist/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/bcryptjs/**/*",
      ".env"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Nexus Finances",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "perMachine": true,
      "include": "build/installer.nsh",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeader": "build/installer-header.png",
      "installerSidebar": "build/installer-sidebar.png"
    }
  }
}